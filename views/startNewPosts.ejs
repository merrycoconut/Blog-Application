<%- include("partials/side-bar.ejs") %>

<!-- Create a new post  -->
<form class="main-block-container" action="/newPost" method="POST">
    <div class="content-container">
        <h3 class="col-10">
            <label for="post_title">Title </label>            
        </h3>
        <div class="col-80">
            <textarea id="post_title" name="post_title" placeholder="Start your post." required></textarea>
        </div>
    </div>

    <div class="content-container">
        <h3 class="col-10">
            <label for="post_content">Text </label>
        </h3>
        <div class="col-80">
            <textarea id="post_content" name="post_content" placeholder="Start your post." required></textarea>
        </div>
        
    </div>

    <button type="submit" class="buttons postbtn">Post</button>

</form>
    
